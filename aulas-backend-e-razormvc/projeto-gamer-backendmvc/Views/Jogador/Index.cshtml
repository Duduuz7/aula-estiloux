@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<h1>Tela de Jogadores</h1>

<form method='post' action="@Url.Action("Cadastrar")">

    <Label>

        <label for="">Nome</label>
        <input type="text" name="Nome" required>

        <label for="">E-mail</label>
        <input type="text" name="Email" required>

        <label for="">Senha</label>
        <input type="text" name="Senha" required>

        <label for="">Equipe</label>
        <select name="Equipe" id="">

            <option value="0">Selecione uma opção</option>

            @foreach (var item in ViewBag.Equipe)
            {
                <option value="">@item.Nome</option>
            }

        </select>

        <button type="submit">Cadastrar</button>

    </Label>

</form>




<table class="table table-stripped table responsive">

    <thead>

        <th>ID</th>
        <th>Nome</th>
        <th>E-Mail</th>
        <th>Equipe</th>

    </thead>

    <tbody>

        @foreach (Jogador j in ViewBag.Jogador)
        {
            <tr>
                <td>@j.IdJogador</td>
                <td>@j.Nome</td>
                <td>@j.Email</td>
                <td>
                    <img src="/img/Equipes/@j.Equipe.Imagem" alt="Imagem da equipe do jogador @j.Nome" width="50px">
                </td>
            </tr>
        }

    </tbody>

</table>