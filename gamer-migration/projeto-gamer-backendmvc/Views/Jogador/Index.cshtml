@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<h1>Tela de Jogadores</h1>

@if (ViewBag.UserName == null)
{
    <a class="navbar-brand" asp-area="=" asp-controller="Login" asp-action="Index">Login</a>
}
else
{
    <form method='post' action="@Url.Action("Cadastrar")">

        <label for="">Nome</label>
        <input type="text" name="Nome" required>

        <label for="">E-mail</label>
        <input type="text" name="Email" required>

        <label for="">Senha</label>
        <input type="password" name="Senha" required>

        <label for="">Equipe</label>
        <select name="IdEquipe" id="" required>

            <option value="0">Selecione uma opção</option>

            @foreach (Equipe equipe in ViewBag.Equipe)
            {
                <option value="@equipe.IdEquipe">@equipe.Nome</option>
            }

        </select>

        <button type="submit">Cadastrar</button>

    </form>



    <table class="table table-stripped table responsive">

        <thead>

            <th>ID</th>
            <th>Nome</th>
            <th>E-Mail</th>
            <th>Equipe</th>

        </thead>

        <tbody>

            @foreach (Jogador j in ViewBag.Jogador)
            {
                <tr>
                    <td>@j.IdJogador</td>
                    <td>@j.Nome</td>
                    <td>@j.Email</td>
                    <td>
                        <img src="/img/Equipes/@j.Equipe.Imagem" alt="Imagem da equipe do jogador @j.Nome" width="50px">
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@j.IdJogador">Excluir</a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@j.IdJogador">Editar</a>
                    </td>

                </tr>
            }

        </tbody>

    </table>
}