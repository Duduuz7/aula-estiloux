@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<link rel="stylesheet" href="~/css/jogadores.css">

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">

        @if (ViewBag.UserName == null)
        {
            <a class="navbar-brand" asp-area="=" asp-controller="Login" asp-action="Index">Login</a>
        }
        else
        {

            <form method='post' action="@Url.Action("Cadastrar")" class="frm-cad-equipe">
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>

                <select class="campo-entrada" id="equipe-select" name="Equipe">
                    <option value="0">Selecione uma equipe</option>

                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <option value="@equipe.IdEquipe">@equipe.Nome</option>
                    }

                </select>

                <input class="campo-entrada" type="text" id="nome-jogador" name="Nome" required
                    placeholder="Digite o nome do Jogador:">
                <input class="campo-entrada" type="email" id="email-jogador" name="Email" required
                    placeholder="Digite o Email do Jogador:">
                <input class="campo-entrada" type="password" id="senha" name="Senha" required placeholder="Digite a Senha:">
                <button>Cadastrar</button>




            </form>

            @* <!-- TABELA CADASTRO DE EQUIPES --> *@

            <table class="table-stripped table responsive">

                <thead>

                    <th>ID</th>
                    <th>Nome</th>
                    <th>E-Mail</th>
                    <th>Equipe</th>
                    <th>Ações</th>


                </thead>

                <tbody>

                    @foreach (Jogador j in ViewBag.Jogador)
                    {
                        <tr>
                            <td>@j.IdJogador</td>
                            <td>@j.Nome</td>
                            <td>@j.Email</td>
                            <td>
                                <img src="~/img/Equipes/@j.Equipe.Imagem" alt="Imagem da equipe do jogador @j.Nome"
                                    width="50px">
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@j.IdJogador">
                                    <img class="yellow-trash" src="~/assets/trash.png" alt="">
                                </a>
                                <a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@j.IdJogador">
                                    <img src="~/assets/Vectorlapis.svg.svg">
                                </a>
                            </td>

                        </tr>
                    }

                </tbody>

            </table>

        }
    </section>
</main>




